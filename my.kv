<MyGrid>

    firstName: firstName
    email: email
    lastName: lastName


    GridLayout:
        cols:1
        size: root.width-200, root.height-200
        pos: 100, 100

        GridLayout:
            cols:2

            # first name
            Label:
                text: "First Name: "
            TextInput:
                id: firstName
                multiline:False


            Label:
                text: "Last Name: "
            TextInput:
                id:lastName
                multiline:False


            Label:
                text: "Email: "
            TextInput:
                id: email
                multiline:False


        Button:
            text:"Submit"
            on_press: root.btn()
